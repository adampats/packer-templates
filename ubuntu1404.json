{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key` }}",
      "region": "us-west-2",
      "source_ami": "ami-d24c5cb3",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "ubuntu 14.04 {{timestamp}}",
      "ami_regions": [ "us-west-2", "us-east-1" ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "base.sh",
      "only": [ "amazon-ebs" ]
    }
  ]
}
